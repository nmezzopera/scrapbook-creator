rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is admin
    function isAdmin() {
      return request.auth != null
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());

      // Users can write their own data
      allow write: if request.auth != null && request.auth.uid == userId;

      // Admins can update any user's tier and admin fields
      allow update: if isAdmin();
    }

    // User scrapbooks
    match /users/{userId}/scrapbooks/{scrapbookId} {
      // Users can access their own scrapbooks, admins can access all
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // PDF preview tokens (temporary, auto-expire after 5 minutes)
    match /pdfPreviews/{tokenId} {
      // Users can create tokens for their own scrapbooks
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Users can read their own tokens, or anyone can read (since tokens are random and expire quickly)
      allow read: if true; // Public read is OK since tokens expire in 5 min

      // No update allowed, delete is handled by Cloud Function using Admin SDK
      allow update, delete: if false;
    }
  }
}
